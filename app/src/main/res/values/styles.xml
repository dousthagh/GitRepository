<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SearchTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="H1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/large_top_margin</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h1</item>
    </style>
    <style name="H1.light">
        <item name="android:fontFamily">@font/semi_bold_italic</item>
    </style>


    <style name="FooterTextViewStyle">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/footer_text_size</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FooterImageStyle">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/medium_top_margin</item>
    </style>

    <style name="ItemH2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_top_margin</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/item_h2_text_size</item>
    </style>

    <style name="ItemH1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/semi_bold_italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/item_h1_text_size</item>
    </style>
</resources>